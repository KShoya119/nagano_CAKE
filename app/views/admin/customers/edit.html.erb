<h3><%= @customer.last_name %> <%= @customer.first_name %>さんの会員情報編集</h3>

<div>
  <p>会員ID <%= @customer.id %></p>
  <%= form_with model: @customer, url: admin_update_customers_path do |f| %>
    <div class="field">
      氏名
      <%= f.text_field :last_name, autofocus: true, required: true, class: 'last_name' %>
      <%= f.text_field :first_name, autofocus: true, required: true, class: 'first_name' %>
    </div>
    
    <div class="field">
      フリガナ
      <%= f.text_field :last_name_kana, autofocus: true, required: true, class: 'last_name_kana' %>
      <%= f.text_field :first_name_kana, autofocus: true, required: true, class: 'first_name_kana' %>
    </div>
    
    <div class="field">
      郵便番号
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>
    
    <div class="field">
      住所
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>
    
    <div class="field">
      電話番号
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
    </div>
    
    <div class="field">
      メールアドレス
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    
    <%= f.submit "変更を保存" %>
    
  <% end %>
  
</div>
