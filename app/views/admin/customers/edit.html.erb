<div class="container my-3">
  <h4 class="col-4 text-center bg-secondary"><%= @customer.last_name %> <%= @customer.first_name %>さんの会員情報編集</h4>

  <table cellpadding="5">
    <tr><th>会員ID</th><td><%= @customer.id %></td></tr>
    <%= form_with model: @customer, url: admin_update_customers_path do |f| %>
      <tr class="field">
        <th>氏名</th>
        <td>
          <%= f.text_field :last_name, autofocus: true, required: true, class: 'last_name' %>
          <%= f.text_field :first_name, autofocus: true, required: true, class: 'first_name' %>
        </td>
      </tr>
    
      <tr class="field">
        <th>フリガナ</th>
        <td>
          <%= f.text_field :last_name_kana, autofocus: true, required: true, class: 'last_name_kana' %>
          <%= f.text_field :first_name_kana, autofocus: true, required: true, class: 'first_name_kana' %>
        </td>
      </tr>
    
      <tr class="field">
        <th>郵便番号</th>
        <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
      </tr>
    
      <tr class="field">
        <th>住所</th>
        <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
      </tr>
    
      <tr class="field">
        <th>電話番号</th>
        <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
      </tr>
    
      <tr class="field">
        <th>メールアドレス</th>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
      
      <tr class="field">
        <th>会員ステータス</th>
        <td>
          <%= f.radio_button :is_active, true, autocomplete: "is_active" %>有効

          <%= f.radio_button :is_active, false, autocomplete: "is_active" %>退会
        </td>
      </tr>
    
      <tr><td><%= f.submit "変更を保存", class: "btn btn-success" %></td></tr>
    
    <% end %>
  </table>
  
</div>
