<h1>会員一覧</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <td>会員ID</td>
      <td>氏名</td>
      <td>メールアドレス</td>
      <td>ステータス</td>
    </tr>
  </thead>
  
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td>
          <%= link_to admin_customer_show_path(customer.id) do %>
            <div class="text-dark"><%= customer.last_name %> <%= customer.first_name %></div>
          <% end %>
        </td>
        <td><%= customer.email %></td>
        <td></td>
      </tr>
    <% end %>
    <%= paginate @customers %>
  </tbody>
</table>
