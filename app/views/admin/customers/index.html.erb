<div class="container my-3">
  <h3 class="col-2 text-center bg-secondary">会員一覧</h3>
  
  
  <div class="row justify-content-center mt-4">
  <table class="col-9 table table-striped">
    <thead>
      <tr>
        <td>会員ID</td>
        <td>氏名</td>
        <td>メールアドレス</td>
        <td>ステータス</td>
      </tr>
    </thead>
  
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td>
            <%= link_to admin_customers_show_path(customer.id) do %>
              <div class="text-dark"><%= customer.last_name %> <%= customer.first_name %></div>
            <% end %>
          </td>
          <td><%= customer.email %></td>
          <td>
            <% if customer.is_active %>
              <div class="text-success">有効</div>
            <% elsif %>
              退会
            <% end %>
          </td>
        </tr>
      <% end %>
      <%= paginate @customers %>
    </tbody>
  </table>
  </div>
</div>
