<h1>商品一覧</h1>

<%= link_to admin_items_new_path, class: "btn btn-lg btn-light rounded-circle p-0 ", style: "width:3rem;height:3rem;" do %>
  <h2 class="mt-1">＋</h2>
<% end %>

<div class="col-8">
<table class="table table-striped">
  <thead>
    <tr>
      <td>商品ID</td>
      <td>商品名</td>
      <td>税抜価格</td>
    </tr>
  </thead>
  
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td>
          <%= link_to admin_items_show_path(item.id) do %>
            <div class="text-dark"><%= item.name %></div>
          <% end %>
        </td>
        <td><%= item.price %></td>
        <td
      </tr>
    <% end %>
    <%= paginate @items %>
  </tbody>
</table>
</div>
