<div class="container my-3">
  <div class="row">
    <h3 class="col-2 text-center bg-secondary">商品一覧</h3>
  
    <div class="col text-right">
      <%= link_to admin_items_new_path, class: "btn btn-lg btn-light rounded-circle p-0", style: "width:3rem;height:3rem;" do %>
        <h2 class="mt-1">＋</h2>
      <% end %>
    </div>
  </div>


  <div class="row justify-content-center mt-4">
  <table class="col-10 table table-striped">
    <thead>
      <tr>
        <td>商品ID</td>
        <td>商品名</td>
        <td>税抜価格</td>
        <td></td>
      </tr>
    </thead>
  
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_items_show_path(item.id) do %>
              <div class="text-dark"><%= item.name %></div>
            <% end %>
          </td>
          <td><%= item.price %></td>
          <td></tr>
      <% end %>
      <%= paginate @items %>
    </tbody>
  </table>
  </div>
</div>

