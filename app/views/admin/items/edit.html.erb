<div class="container mt-3">
  <h3 class="col-2 text-center bg-secondary">商品編集</h3>
  
  
  <table cellpadding="13" class="col-3 mt-1">
    <%= form_with model: @item, url: admin_update_items_path do |f| %>
      <tr>
          <th>商品画像</th><td><%= f.file_field :image, accept: "image/*" %></td>
      </tr>
      
      <tr>
        <th>商品名</th><td><%= f.text_field :name %></td>
      </tr>
      
      <tr>
        <th>商品説明文</th><td><%= f.text_field :introduction %></td>
      </tr>
      
      <tr>
        <th>税抜価格</th><td><%= f.text_field :price %>円</td>
      </tr>
      
      <tr>
        <td><%= f.submit '変更を保存', class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </table>
</div>
