<h1>ジャンル一覧・追加</h1>

<%= form_with model: @genre, url: admin_genres_create_path do |f| %>
  ジャンル名
  <%= f.text_field :name %>
  
  <%= f.submit '新規登録' %>
<% end %>


<div class="col-3">
<table class="table table-striped">
  <thead>
    <tr>
      <td>ジャンル</td>
      <td></td>
    </tr>
  </thead>
  
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to '編集', admin_edit_genres_path(genre.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
