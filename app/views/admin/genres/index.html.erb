<div class="container my-3">
  <h4 class="col-3 text-center bg-secondary">ジャンル一覧・追加</h4>

  <div class="row my-5">
    <%= form_with model: @genre, url: admin_genres_create_path do |f| %>
      ジャンル名
      <%= f.text_field :name %>
  
      <%= f.submit '新規登録', class: "btn btn-success" %>
    <% end %>
  </div>


  <div class="row">
  <div class="col-4">
  <table class="table table-striped">
    <thead>
      <tr>
        <td>ジャンル</td>
        <td></td>
      </tr>
    </thead>
  
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to '編集', admin_edit_genres_path(genre.id), class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
  </div>
  
</div>
