<div class="container my-5">
<h2 class="mb-4">管理者ログイン</h2>

<table>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <tr>
        <div class="field">
          <th><%= f.label :メールアドレス %></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
          <th><%= f.label :パスワード %></th>
          <td><%= f.password_field :password, autocomplete: "current-password" %></td>
        </div>
      </tr>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <% f.check_box :remember_me %>
          <% f.label :remember_me %>
        </div>
      <% end %>

      <tr>
        <div class="actions">
          <th></th>
          <th><%= f.submit "ログイン" %></th>
        </div>
      </tr>
    <% end %>
</table>

  <%= render "admin/admins/shared/links" %>

</div>
