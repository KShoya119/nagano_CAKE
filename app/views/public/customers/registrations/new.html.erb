<div class="container">
<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/customers/shared/error_messages", resource: resource %>
  
  <table>
    <tr>
      <div class="field">
        <th><%= f.label :名前 %></th>
        <td>
          <%= f.label :last_name, "(姓)" %>
          <%= f.text_field :last_name, autofocus: true, required: true, class: 'last_name' %>
          <%= f.label :first_name, "(名)" %>
          <%= f.text_field :first_name, autofocus: true, required: true, class: 'first_name' %>
        </td>
      </div>
    </tr>
  
  <div class="field">
    <tr>
      <th><%= f.label :フリガナ %></th>
      <td>
        <%= f.label :last_name_kana, "(セイ)" %>
        <%= f.text_field :last_name_kana, autofocus: true, required: true, class: 'last_name_kana' %>
        <%= f.label :first_name_kana, "(メイ)" %>
        <%= f.text_field :first_name_kana, autofocus: true, required: true, class: 'first_name_kana' %>
      </td>
  </div>

  <div class="field">
    <tr>
      <tH><%= f.label :メールアドレス %></th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
  </div>
  
  <div class="field">
    <tr>
      <th><%= f.label :郵便番号 %></th>
      <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
    </tr>
  </div>
  
  <div class="field">
    <tr>
    <th><%= f.label :住所 %></th>
    <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
    </tr>
  </div>
  
  <div class="field">
    <tr>
    <th><%= f.label :電話番号 %></th>
    <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
    </tr>
  </div>

  <div class="field">
    <tr>
      <th>
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
      </th>
      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    </tr>
  </div>

  <div class="field">
    <tr>
    <th><%= f.label :パスワード（確認用） %></th>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    </tr>
  </div>

  <div class="actions">
    <td><%= f.submit "Sign up", class: "btn btn-success" %></td>
  </div>
  </table>
<% end %>

<%= render  "public/customers/shared/links" %>
</div>
