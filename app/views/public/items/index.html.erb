<div class="container my-3">
  <div class="row d-flex align-items-end mb-4">
    <h2 class="font-weight-bold">商品一覧</h2>
    <h5>(全<%= @items.count %>件)</h5>
  </div>

  <div class="row row-cols-4">
     <% @items.each do |item| %>
      <div class="col mb-5">
        <%= link_to items_show_path(item.id) do %>
          <%= image_tag item.get_image(225,225) %><br>
        <% end %>
        <%= item.name %><br>
        ¥<%= item.price %><br>
      </div>
    <% end %>
    <%= paginate @items %>
  </div>
</div>
