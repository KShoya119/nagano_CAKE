<div class="container">
  <h3>注文情報入力</h3>

  <%= form_with model: @order, url: orders_new_path do |f| %>
    <h3>支払い方法</h3>
      <label><%= f.radio_button :pay_method, "クレジットカード" %> クレジットカード</label>
      <label><%= f.radio_button :pay_method, "銀行振込" %> 銀行振込</label>

    <h3>お届け先</h3>
      <%= f.radio_button :selected_address, 0 %>ご自身の住所<br>
        <%= @customer.postal_code %>
        <%= @customer.address %><br>
        <%= @customer.last_name %><%= @customer.first_name %><br>
    
      <%= f.radio_button :selected_address, 1 %>登録済み住所から選択
        <%= f.collection_select :address, @addresses, :id, :full_address %> <br>
    
      <%= f.radio_button :selected_address, 2 %>新しいお届け先
        <table>
          <tr>
            <th>郵便番号(ハイフンなし)</th>
            <td><%= f.text_field :postcode_mail %></td>
          </tr>
          
          <tr>
          <th>住所</th>
          <td><%= f.text_field :address_mail %></td>
          </tr>
      
          <th>宛名</th>
          <td><%= f.text_field :name_mail%></td>
          </tr>
        </table>
        
    <%= f.submit "確認画面へ進む", class:"btn btn-primary" %>
  <% end %>
</div>