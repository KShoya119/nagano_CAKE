<div class="container my-3">
  <h2 class="col-3 text-center bg-secondary ml-5 mb-5">注文履歴一覧</h2>
  
  <table class="col-12 table table-striped">
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to orders_show_path(order.id) do %>
              <div class="text-dark"><%= order.created_at.strftime('%Y/%m/%d') %></div>
            <% end %>
          </td>
          <td>
            〒<%= order.postcode_mail %><br>
            <%= order.address_mail %><br>
            <%= order.name_mail %>
          </td>
          <td>
            <% order.order_details.each do |order_details| %>
              <%= order_details.item.name %><br>
            <% end %>
          </td>
          <td><%= order.total %></td>
          <td><%= link_to "表示する", orders_show_path(order.id), class: "btn btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
</div>
